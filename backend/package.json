    "@loopback/rest-explorer": "^7.0.7",
    "@loopback/service-proxy": "^7.0.7",
    "airtable": "^0.12.2",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "grammy": "^1.31.1",
    "loopback-connector-postgresql": "^7.1.7",
    "node-fetch": "^2.7.0",
    "tslib": "^2.0.0"
